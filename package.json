{
  "name": "@sebastianjarsve/persistent-atom",
  "version": "1.0.0",
  "description": "A utility for creating persistent Nanostores atoms. It uses a flexible storage adapter system and includes pre-built adapters for the Raycast API. ",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./adapters": "./dist/adapters/index.js",
    "./react": "./dist/react/index.js"
  },
  "typesVersions": {
    "*": {
      ".": ["./dist/index.d.ts"],
      "adapters": ["./dist/adapters/index.d.ts"],
      "react": ["./dist/react/index.d.ts"]
    }
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "pnpm run build",
    "prepare": "pnpm run build",
    "test": "vitest"
  },
  "keywords": [],
  "author": "Sebastian Jarsve",
  "license": "Beerware license",
  "packageManager": "pnpm@10.16.1",
  "devDependencies": {
    "@types/node": "latest",
    "@types/react": "latest",
    "nanostores": "^1.0.1",
    "picomatch": "latest",
    "typescript": "latest",
    "vitest": "latest",
    "zod": "^4.1.9"
  },
  "peerDependencies": {
    "@raycast/api": "^1.103.1",
    "nanostores": "^1.0.1",
    "zod": "^4.1.9"
  },
  "dependencies": {
    "@nanostores/react": "^1.0.0"
  }
}
