{
  "name": "zod-persist",
  "version": "1.0.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/SebastianJarsve/zod-persist"
  },
  "homepage": "https://github.com/SebastianJarsve/zod-persist#readme",
  "description": "Type-safe persistent state with Zod validation, migrations, and error recovery. Works with Nanostores and any storage backend.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./adapters": "./dist/adapters/index.js",
    "./react": "./dist/react/index.js"
  },
  "typesVersions": {
    "*": {
      ".": ["./dist/index.d.ts"],
      "adapters": ["./dist/adapters/index.d.ts"],
      "react": ["./dist/react/index.d.ts"]
    }
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "pnpm run build",
    "prepare": "pnpm run build",
    "test": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "nanostores",
    "zod",
    "persistence",
    "state-management",
    "validation",
    "migrations",
    "typescript",
    "atoms"
  ],
  "author": "Sebastian Jarsve",
  "license": "Beerware license",
  "packageManager": "pnpm@10.16.1",
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/node": "latest",
    "@types/react": "latest",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "nanostores": "^1.0.1",
    "picomatch": "latest",
    "prettier": "^3.6.2",
    "typescript": "latest",
    "typescript-eslint": "^8.46.0",
    "vitest": "latest",
    "zod": "^4.1.9"
  },
  "peerDependencies": {
    "nanostores": "^1.0.1",
    "zod": "^4.1.9"
  },
  "dependencies": {
    "@nanostores/react": "^1.0.0"
  }
}
